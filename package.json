{
    "name": "webcell-scaffold",
    "version": "0.3.0",
    "description": "App Project scaffold of WebCell v2",
    "keywords": [
        "web-component",
        "typescript",
        "jsx",
        "web-cell"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/scaffold.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/scaffold/issues"
    },
    "main": "src/index.html",
    "dependencies": {
        "boot-cell": "^1.9.2",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.4",
        "classnames": "^2.2.6",
        "web-cell": "^2.3.0-beta.6",
        "web-utility": "^2.4.1"
    },
    "devDependencies": {
        "@types/node": "^14.14.20",
        "@typescript-eslint/parser": "^4.12.0",
        "autoprefixer": "^9.8.6",
        "eslint": "^7.17.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^4.3.7",
        "lint-staged": "^10.5.3",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3",
        "workbox-cli": "^6.0.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml}": "prettier --write",
        "*.{js,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "test": "lint-staged",
        "start": "parcel src/index.html --open",
        "pack": "parcel build src/index.html --public-url .",
        "build": "rm -rf dist/  &&  npm run pack  &&  workbox generateSW"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
