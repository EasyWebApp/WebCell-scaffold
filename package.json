{
    "name": "webcell-scaffold",
    "version": "0.3.0",
    "keywords": [
        "web-component",
        "typescript",
        "jsx"
    ],
    "description": "",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/scaffold.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/scaffold/issues"
    },
    "main": "src/index.html",
    "dependencies": {
        "boot-cell": "^0.18.1",
        "cell-router": "^2.0.0-rc.3",
        "classnames": "^2.2.6",
        "mobx": "^5.15.1",
        "mobx-web-cell": "^0.2.5",
        "web-cell": "2.0.0-rc.12"
    },
    "devDependencies": {
        "@typescript-eslint/parser": "^2.14.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^3.1.0",
        "lint-staged": "^9.5.0",
        "parcel-bundler": "^1.12.4",
        "prettier": "^1.19.1",
        "typescript": "^3.7.4",
        "workbox-cli": "^4.3.1"
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml}": [
            "prettier --write",
            "git add"
        ],
        "*.{js,ts,tsx}": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ]
    },
    "scripts": {
        "test": "lint-staged",
        "start": "workbox generateSW  &&  parcel src/index.html --open",
        "pack-dist": "parcel build src/index.html --public-url .",
        "pack-sw": "rm -f dist/sw.js.map  &&  workbox generateSW",
        "build": "rm -rf dist/  &&  npm run pack-dist  &&  npm run pack-sw"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
