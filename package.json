{
    "name": "webcell-scaffold",
    "version": "0.3.0",
    "description": "App Project scaffold of WebCell v2",
    "keywords": [
        "web-component",
        "typescript",
        "jsx",
        "web-cell"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/scaffold.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/scaffold/issues"
    },
    "main": "src/index.html",
    "dependencies": {
        "boot-cell": "^1.1.1",
        "bootstrap-icons": "^1.0.0",
        "browser-unhandled-rejection": "^1.0.2",
        "cell-router": "^2.0.1",
        "classnames": "^2.2.6",
        "web-cell": "^2.2.0",
        "web-utility": "^1.8.0"
    },
    "devDependencies": {
        "@typescript-eslint/parser": "^4.2.0",
        "autoprefixer": "^9.8.6",
        "eslint": "^7.9.0",
        "eslint-config-prettier": "^6.12.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.0",
        "parcel-bundler": "^1.12.4",
        "postcss-modules": "^3.2.2",
        "prettier": "^2.1.2",
        "typescript": "^4.0.3",
        "workbox-cli": "^4.3.1"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,md,css,less,json,yml}": [
            "prettier --write"
        ],
        "*.{js,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "postcss": {
        "modules": true,
        "plugins": {
            "autoprefixer": {
                "grid": true
            }
        }
    },
    "scripts": {
        "test": "lint-staged",
        "start": "workbox generateSW  &&  parcel src/index.html --open",
        "pack-dist": "parcel build src/index.html --public-url .",
        "pack-sw": "rm -f dist/sw.js.map  &&  workbox generateSW",
        "build": "rm -rf dist/  &&  npm run pack-dist  &&  npm run pack-sw"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
